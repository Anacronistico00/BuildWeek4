﻿
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BuildWeek4</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BuildWeek4.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
            <div class="container-fluid">


                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="https://images.ctfassets.net/pjhgqryi6myh/4HQb1qJXGxaurg6WZckO3I/cc98e64559899efaa10b091654667ce4/CMLogoBlue1_-_Horizontal_Trademark.png" alt="CardMarket Logo" class="Logo me-2" />
                </a>


                <div class="dropdown me-3">
                    <button class="btn dropdown-toggle" type="button" id="dropdownMenuImages" data-bs-toggle="dropdown" aria-expanded="false">
                        Scegli il tuo TCG preferito
                    </button>
                    <ul class="dropdown-menu p-3" aria-labelledby="dropdownMenuImages" style="width: 600px;">
                        <div class="row g-3">
                            <div class="col-4">
                                <a href="#"><img src="https://1000logos.net/wp-content/uploads/2024/02/Yu-Gi-Oh-Logo-2001.png" alt="Yugioh" class="img-fluid"></a>
                            </div>
                            <div class="col-4">
                                <a href="#"><img src="https://upload.wikimedia.org/wikipedia/commons/thumb/1/1a/Pok%C3%A9mon_Trading_Card_Game_logo.svg/2560px-Pok%C3%A9mon_Trading_Card_Game_logo.svg.png" alt="Pokemon" class="img-fluid"></a>
                            </div>
                            <div class="col-4">
                                <a href="#"><img src="https://logos-world.net/wp-content/uploads/2023/05/Magic-The-Gathering-Logo.png" alt="MTG" class="img-fluid"></a>
                            </div>
                            <div class="col-4">
                                <a href="#"><img src="https://wiki.mushureport.com/images/thumb/5/57/Disney_Lorcana_TCG_Logo_transparent.png/1200px-Disney_Lorcana_TCG_Logo_transparent.png" alt="Lorcana" class="img-fluid"></a>
                            </div>
                            <div class="col-4">
                                <a href="#"><img src="https://static.wixstatic.com/media/57a197_e334385962ac4203abe6390f3b6ff4c6~mv2.png" alt="One Piece" class="img-fluid"></a>
                            </div>
                            <div class="col-4">
                                <a href="#"><img src="https://relentlessdragon.com/wp-content/uploads/2019/10/dragon-ball-super-logo.png" alt="DB" class="img-fluid"></a>
                            </div>
                        </div>
                    </ul>
                </div>


                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>


                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav gap-4">
                        <li class="nav-item">
                            <a class="nav-link  d-flex align-items-center gap-1" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door-fill fs-3"></i> Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link  d-flex align-items-center gap-1" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-person-fill fs-3"></i> Profilo
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link  d-flex align-items-center gap-1" asp-area="" asp-controller="Cart" asp-action="VisualizzaCarrello">
                                <i class="bi bi-cart4 fs-3"></i> Carrello
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link  d-flex align-items-center gap-1" asp-area="" asp-controller="Admin" asp-action="Index">
                                <i class="bi bi-person-fill fs-3"></i> Admin
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="search-container">
        <div class="container my-1">
            <form method="get" action="/Home/Ricerca">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Cerca su Cardmarket..." name="query" aria-label="Cerca">
                    <div class="vr"></div>
                    <button class="btn" type="submit">
                        <i class="bi bi-search"></i>
                    </button>
                </div>
            </form>
        </div>
    </div>

    </div>
    <div class="mainContainer">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - BuildWeek4 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>