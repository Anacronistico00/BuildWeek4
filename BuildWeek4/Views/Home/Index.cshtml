@model ProductViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center BgDiv">
    <div class="carousel-container">
        <div id="carouselExample" class="carousel slide shadow-sm rounded">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="/imgs/1.png" class="d-block w-100 rounded" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="/imgs/2.png" alt="Alternate Text" class="d-block w-100 rounded" />
                </div>
                <div class="carousel-item">
                    <img src="/imgs/6.png" class="d-block w-100 rounded" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="/imgs/3.png" class="d-block w-100 rounded" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="/imgs/4.png" class="d-block w-100 rounded" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="/imgs/5.png" class="d-block w-100 rounded" alt="...">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>

    <div class="container search-container mt-3">
        <form method="get" action="/Home/Ricerca" class="d-flex justify-content-center">
            <div class="input-group search-bar">
                <input type="text" class="form-control" placeholder="Cerca su Cardmarket..." name="query" aria-label="Cerca">
                <button class="btn btn-search" type="submit">
                    <i class="bi bi-search"></i>
                </button>
            </div>
        </form>
    </div>
</div>

<div class="BgDiv pt-4">
    @if (Model.Products != null && Model.Products.Count > 0)
    {
        <div class="container pb-3">
            <h1 class="display-5 text-center text-white fw-bold mb-3">🔥 Di tendenza</h1>
            <div class="row row-cols-2 row-cols-md-3 row-cols-lg-5 g-3 justify-content-center">
                @foreach (var product in Model.Products)
                {
                    <div class="col">
                        <div class="card product-card border-0 shadow-sm rounded p-2 text-center">
                            <a asp-controller="Home" asp-action="Details" asp-route-id="@product.IdProdotto">
                                <img src="@product.URLImmagine" class="card-img-top product-img" alt="@product.Dettaglio">
                            </a>
                            <div class="card-body">
                                <h6 class="card-title fw-bold">@product.Dettaglio</h6>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>

