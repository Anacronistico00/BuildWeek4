@{
    ViewData["Title"] = "Profilo";
}
<div class=" BgDiv loginDiv ">
<div class="container roundedDiv ">
    <h2 class="text-center">Profilo Utente</h2>

    <div class="card mt-4 mx-auto" style="max-width: 400px;">
        <div class="card-body">
            <h5 class="card-title">Benvenuto!</h5>
            <p class="card-text"><strong>Email:</strong> @ViewBag.Email</p>
            <p class="card-text"><strong>Ruolo:</strong> @(ViewBag.IsAdmin ? "Admin" : "Utente")</p>

            <a href="/Login/Logout" class="btn btn-danger w-100">Logout</a>
        </div>
    </div>
</div>
</div>
