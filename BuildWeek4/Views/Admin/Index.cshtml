@model ProductViewModel

@{
    ViewData["Title"] = "Sezione Admin";
}

<div class="container">
    <h3 class="text-center">Modifica o elimina un prodotto</h3>
    <div class="d-flex justify-content-end">
        <a class="btn btn-success" asp-controller="Admin" asp-action="AddProduct">Aggiungi un nuovo prodotto</a>
    </div>

    @if (Model.Products != null && Model.Products.Count > 0)
    {
        <table>
            <thead>
                <tr>
                    <th>IMMAGINE</th>
                    <th>NOME</th>
                    <th>CATEGORIA</th>
                    <th>PREZZO</th>
                    <th>DESCRIZIONE</th>
                    <th>STOCK</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model.Products)
                {
                    <tr>
                        <td><img src="@product.URLImmagine" alt="@product.Dettaglio" class="w-50" /></td>
                        <td>@product.Dettaglio</td>
                        <td>@product.Categoria</td>
                        <td>@product.Prezzo.ToString("C")</td>
                        <td>@product.Descrizione</td>
                        <td>@product.Quantita</td>
                        <td>
                            <div class="icons">
                                <a asp-controller="Admin" asp-action="Edit" asp-route-id="@product.IdProdotto"><i
                                        class="bi bi-pencil-fill"></a>
                                <a asp-controller="Admin" asp-action="delete" asp-route-id="@product.IdProdotto"><i
                                        class="bi bi-trash-fill"></i></a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>