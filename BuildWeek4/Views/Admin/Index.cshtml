@model ProductViewModel

@{
    ViewData["Title"] = "Sezione Admin";
}

<div class="container">
<h3 class="text-center">Modifica o elimina un prodotto</h3>
<div class="d-flex justify-content-end">
<a class="btn btn-success" asp-controller="Admin" asp-action="AddProduct">Aggiungi un nuovo prodotto</a>
</div>

    @if (Model.Products != null && Model.Products.Count > 0)
    {
        <table class="table table-striped table-bordered table-hover mt-3">
            <thead class="thead-dark">
                <tr>
                    <th>Immagine</th>
                    <th>Nome</th>
                    <th>Categoria</th>
                    <th>Prezzo</th>
                    <th>Descrizione</th>
                    <th>Azioni</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model.Products)
                {
                    <tr>
                        <td><img src="@product.URLImmagine" alt="@product.Dettaglio" class="w-25"/></td>
                        <td>@product.Dettaglio</td>
                        <td>@product.Categoria</td>
                        <td>@product.Prezzo.ToString("C")</td>
                        <td>@product.Descrizione</td>
                        <td>
                            <a class="btn btn-warning" asp-controller="Admin" asp-action="Edit" asp-route-id="@product.IdProdotto">Modifica</a>
                            <a class="btn btn-danger" asp-controller="Admin" asp-action="delete" asp-route-id="@product.IdProdotto">Rimuovi</a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>